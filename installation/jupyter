FROM jupyter/datascience-notebook:python-3.11

USER $NB_UID
RUN conda install --quiet --yes \
    's3fs' \
    'pydantic=1.10.12' \
    'prefect=2.10.13' \
    'mlflow=2.3.2' \
    'optuna=3.2.0' \
    'boto3=1.28.12' && \
    conda clean --all -f -y && \
    fix-permissions "${CONDA_DIR}" && \
    fix-permissions "/home/${NB_USER}"

WORKDIR ${HOME}